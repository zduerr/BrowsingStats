{
  "manifest_version": 2,
  "name": "Time Tracker",
  "description": "Track time spent on websites",
  "version": "0.1",
  "browser_action": {
    "default_icon": "img/icon.png",
    "default_popup": "views/popup.html"
  },
  "permissions": [
    "tabs",
    "idle",
    "storage",
    "unlimitedStorage"
  ],
  "background": {
    "scripts": ["js/lib/jquery.min.js",
      "js/lib/dexie.min.js",
      "js/bg/indexedDb.js",
      "js/bg/stopwatch.js",
      "js/bg/listener.js",
      "js/bg/browserstate.js",
      "js/bg/background.js"
    ]
  }
}